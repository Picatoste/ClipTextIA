<Window
    x:Class="ClipTextIA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClipTextIA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="ClipTextIA">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox 
                x:Name="PromptBox" 
                Grid.Column="0"
                Height="100" 
                MinWidth="300"
                AcceptsReturn="True" 
                TextWrapping="Wrap"
                PlaceholderText="Escribe tu añadido del prompt aquí"
                Text="" />

            <Button 
                x:Name="ActivateHotkeyButton"
                Grid.Column="1" 
                Content="Activar Hotkey" 
                Click="ActivateHotkey_Click" 
                Margin="10,0,0,0" 
                VerticalAlignment="Top" />
        </Grid>


        <controls:WebView2 
            x:Name="MyWebView" 
            Grid.Row="1" 
            Visibility="Visible" />
    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
      <TextBox x:Name="ApiKeyBox"
             Header="API Key"
             PlaceholderText="Introduce tu clave de API"
             Text=""
             AcceptsReturn="False"
             TextWrapping="NoWrap"/>

      <TextBox x:Name="ApiUrlBox"
             Header="URL del modelo"
             PlaceholderText="https://openrouter.ai/api/v1/chat/completions"
             Text="https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash"
             AcceptsReturn="False"
             TextWrapping="NoWrap"
             Margin="0,5,0,0"/>
    </StackPanel>
  </Grid>
</Window>
